<?xml version="1.0"?>
<Container version="2">
  <Name>Watchma</Name>
  <Repository>jsonbateman/watchma:latest</Repository>
  <Registry>https://hub.docker.com/r/jsonbateman/watchma</Registry>
  <Network>bridge</Network>
  <MyIP/>
  <Shell>sh</Shell>
  <Privileged>false</Privileged>
  <Readme>https://github.com/json-bateman/watchma/blob/main/README.md</Readme>
  <Support>https://github.com/json-bateman/watchma/issues</Support>
  <Project>https://github.com/json-bateman/watchma</Project>
  <Overview>A fun, interactive movie voting system for groups. Connect to your Jellyfin server and let everyone vote on what to watch - no more endless scrolling and arguing!</Overview>
  <Category>MediaApp:Video Status:Stable</Category>
  <WebUI>http://[IP]:[PORT:58008]</WebUI>
  <TemplateURL>https://raw.githubusercontent.com/json-bateman/watchma/main/watchma.xml</TemplateURL>
  <Icon>https://raw.githubusercontent.com/json-bateman/watchma/main/public/favicon.png</Icon>
  <ExtraParams/>
  <PostArgs/>
  <CPUset/>
  <DateInstalled></DateInstalled>
  <DonateText>If you realllllly like it (and I hope you do), I like money.</DonateText>
  <DonateLink>https://ko-fi.com/jsonbateman</DonateLink>
  <Requires/>
  <Config Name="WebUI Port" Target="58008" Default="58008" Mode="tcp" Description="Web interface port" Type="Port" Display="always" Required="true" Mask="false">58008</Config>
  <Config Name="Data Directory" Target="/data" Default="/mnt/user/appdata/watchma" Mode="rw" Description="Directory for database and persistent data" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/appdata/watchma</Config>
  <Config Name="Jellyfin API Key" Target="JELLYFIN_API_KEY" Default="" Mode="" Description="Your Jellyfin API key (optional - uses dummy data if not provided)" Type="Variable" Display="always" Required="false" Mask="true"/>
  <Config Name="Jellyfin Base URL" Target="JELLYFIN_BASE_URL" Default="" Mode="" Description="Your Jellyfin server URL (e.g., https://jellyfin.example.com)" Type="Variable" Display="always" Required="false" Mask="false"/>
  <Config Name="OpenAI API Key" Target="OPENAI_API_KEY" Default="" Mode="" Description="OpenAI API key for AI-generated game messages (optional)" Type="Variable" Display="always" Required="false" Mask="true"/>
  <Config Name="Log Level" Target="LOG_LEVEL" Default="INFO" Mode="" Description="Logging level: DEBUG, INFO, WARN, ERROR" Type="Variable" Display="advanced" Required="false" Mask="false">INFO</Config>
  <Config Name="Port" Target="PORT" Default="58008" Mode="" Description="Internal port (should match WebUI Port)" Type="Variable" Display="advanced" Required="false" Mask="false">58008</Config>
</Container>
