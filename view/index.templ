package view

import "github.com/json-bateman/jellyfin-grabber/view/common"

templ IndexPage(name string) {
	@common.Layout("Movie Showdown") {
		<div class="text-6xl flex flex-wrap gap-3 text-text mt-8 justify-center font-serif text-center">
			<span class="font-bold shadow-dance-text">Movie</span>
			<span class="font-bold shadow-dance-text">Showdown</span>
		</div>
