# Jellyfin Configuration
# Required for fetching movie data from your Jellyfin server
# Leave empty to use dummy data for testing
JELLYFIN_API_KEY=your_jellyfin_api_key_here
JELLYFIN_BASE_URL=https://your-jellyfin-server.com

# OpenAI Configuration
# Required for AI-powered features (game results generation, etc.)
OPENAI_API_KEY=your_openai_api_key_here

# Server Configuration
# Port the server will listen on (default: 58008)
PORT=58008

# Logging
# Options: DEBUG, INFO, WARN, ERROR (default: INFO)
LOG_LEVEL=DEBUG

# Development Mode
# Set to "true" for local development (allows HTTP cookies, enables request logging)
# Defaults to "false" (production mode) if not set
# IS_DEV=true
